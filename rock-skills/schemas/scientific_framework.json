{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Scientific Framework Schema",
  "description": "Schema for scientific frameworks like Science of Reading",
  "type": "object",
  "properties": {
    "framework_id": {
      "type": "string",
      "pattern": "^FW-[A-Z]+-[0-9]{3,}$",
      "description": "Unique framework identifier (e.g., FW-SOR-001)"
    },
    "framework_name": {
      "type": "string",
      "description": "Name of the framework (e.g., 'Science of Reading')"
    },
    "framework_version": {
      "type": "string",
      "description": "Version or year of the framework"
    },
    "framework_description": {
      "type": "string",
      "description": "Overview of the framework"
    },
    "hierarchy": {
      "type": "object",
      "properties": {
        "strands": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "strand_id": {"type": "string"},
              "strand_name": {"type": "string"},
              "strand_description": {"type": "string"},
              "pillars": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "pillar_id": {"type": "string"},
                    "pillar_name": {"type": "string"},
                    "pillar_description": {"type": "string"},
                    "domains": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "domain_id": {"type": "string"},
                          "domain_name": {"type": "string"},
                          "domain_description": {"type": "string"},
                          "skill_sets": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "properties": {
                                "skill_set_id": {"type": "string"},
                                "skill_set_name": {"type": "string"},
                                "skill_set_description": {"type": "string"}
                              }
                            }
                          },
                          "mapped_base_skills": {
                            "type": "array",
                            "items": {
                              "type": "string",
                              "pattern": "^BS-[0-9]{3,}$"
                            },
                            "description": "Base skills mapped to this domain"
                          }
                        },
                        "required": ["domain_id", "domain_name"]
                      }
                    }
                  },
                  "required": ["pillar_id", "pillar_name"]
                }
              }
            },
            "required": ["strand_id", "strand_name"]
          }
        }
      }
    },
    "source": {
      "type": "string",
      "description": "Source or reference for this framework"
    },
    "created_timestamp": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": [
    "framework_id",
    "framework_name",
    "framework_version",
    "hierarchy"
  ]
}

